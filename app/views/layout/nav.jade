// Navbar
nav.main-header.navbar.navbar-expand.navbar-info.navbar-light
	// Left navbar links
	ul.navbar-nav
		li.nav-item
			a.nav-link(data-widget='pushmenu' href='#')
				i.fas.fa-bars
		li.nav-item.d-none.d-sm-inline-block
			a.nav-link(href='/') Home
		li.nav-item.d-none.d-sm-inline-block
			a.nav-link(href='/article/banjir') Banjir
		li.nav-item.d-none.d-sm-inline-block
			a.nav-link(href='/article/subscribe') Subscribe
	ul.navbar-nav.ml-auto
		if status
			.dropdown#dropdownUser
				if admin
					-var say = '(Admin)'
				else
					-var say = '(Non Admin)'
				-var username1 = username
				a.btn-info.dropdown-toggle(href='#' data-toggle='dropdown') Hai, #{username1} #{say} 
				.dropdown-menu
					a.dropdown-item(href='/users') Profile
					a.dropdown-item(href='/users/logout') Signout
		else
			a(href="/users/login").dropdown-item Login