extends ../layout/base
block content	
	section.content
		.row
			.col-md-8
					.card.border-primary
						.card-header: .text-center
							strong CHART REALTIME TEGANGAN - WAKTU
						.card-body
							#vChart
					.card.border-primary
						.card-header: .text-center
							strong CHART REALTIME ARUS - WAKTU
						.card-body
							#iChart

			.col-md-4
				.card.border-primary
					.card-header Option
					.card-body: .row.no-gutters
						.col-2 
							h6.ml-2 Date :
							h6.ml-2 POS :
						.col-6
							input(type='date').form-control#dateReq
							select.custom-select.form-control#optSite
								for site in dataSite
									option(value="#{site.site}") #{site.pos}
						.col-4
							input(type='submit' value='GET' style='height:100%').form-control.btn-light#getBtn
				.card.border-primary
					.card-header DPS STATUS POS : 
						span.siteDps
					.card-body
						table.table
							
							tr: td Updated
								td.dtDps
							tr: td TMA
								td.KondTma
							tr: td CH
								td.KondCh
							tr: td V Air
								td.KondV
							
				.card.border-primary
					.card-header LAST RECORD DPCD POS : 
						span.site
					.card-body
						table.table
							tr: td Datetime
								td.dt
							tr: td Lux
								td.lx 
							tr: td Suhu Logger
								td.t
							tr: td Sisa Kapasitas Baterai
								td.skb
							tr: td Estimasi Daya Baterai
								td.edb
							tr: td Daya solar panel
								td.wps
							tr: td Fungsi Daya solar panel
								td.fwps

						table.table.table-bordered
							thead
								td Titik :
								td V 
								td I 
							tbody
								tr
									td Panel Regulator
									td.vpr
									td.ipr
								tr
									td Batterai Regulator
									td.vbr
									td.ibr
								tr
									td Regulator Beban
									td.vrl
									td.irl
		
		.card.border-primary
				.text-center.mt-2
					strong TABLE REALTIME HARIAN
				.card-body.border-primary
					.table-responsive(style="height:400px;overlay:auto;")
						table.table.thead-dark
							thead
								td Site
								td date
								td Lux
								td T
								td SKB
								td EDB
								td WPS
								td FWPS
								td VBR
								td VPR
								td VRL
								td IBR
								td IPR
								td IRL
							tbody#tblContent



block script
	script.
		$('#dateReq').val(moment().add(7,'hours').format('YYYY-MM-DD'))
		var socket = io.connect(BASE_URL);
		siteData= !{siteData}
	script(src="/js/views/qc.js")