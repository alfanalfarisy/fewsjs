html
	head
		title #{title}
		include layout/head.jade
	body
		style.
			.my-class {
			height:100px;
			width:120px;
			}
			#mapid{
			width: 100%;
			height: 300px;
			background-color: grey;
			}
			#data{
			padding:10px;
			}
			p {
				text-align:center;
				font: bold;
			}
		.container.mt-3
			.row.justify-content-md-center
				.col-md-8
					.card
						.card-header
							h3.text-center WARNING FEWS
						.card-body
							p Waktu Update Data : 
								span#dt
							#mapid
							br
							.card#data
								.row
									.col-6
										.info-box
											span.info-box-icon.bg-warning
												i.fas.fa-water

											.info-box-content
												span.info-box-text Tinggi Muka Air
												span.info-box-number#tma
										.info-box
											span.info-box-icon.bg-warning
												i.fas.fa-tint

											.info-box-content
												span.info-box-text Intensitas Curah Hujan
												span.info-box-number#ich
										.info-box
											span.info-box-icon.bg-warning
												i.fas.fa-caret-up

											.info-box-content
												span.info-box-text Kecepatan Air
												span.info-box-number#vair
									.col-6
										.info-box
											p Status :
											span#status
										.info-box
											p Kondisi :
											span#kondisi
										.info-box

		include layout/js.jade
		script.
